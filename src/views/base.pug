doctype html 
html(lang="ko")
    head
        title #{pageTitle} | #{siteName}
        link(rel="stylesheet" href="https://unpkg.com/mvp.css")
    body
        header
            h1=pageTitle
            nav 
                ul 
                    li 
                        a(href="/") Home
                    li
                        a(href="/search") Search
                    if loggedIn 
                        li 
                            a(href="/my-profile") #{loggedInUser.name}님의 Profile
                        li 
                            a(href="/user/edit") Edit Profile
                        li
                            a(href="/videos/upload") Upload Video
                        li 
                            a(href="/user/logout") Log out
                    else
                        li 
                            a(href="/join") Join
                        li 
                            a(href="/login") Login

        main
            block content
    include partials/footer.pug
                   

            
            
